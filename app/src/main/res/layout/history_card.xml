<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:orientation="horizontal"
    >

   <androidx.cardview.widget.CardView
       android:id="@+id/card_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:fadeScrollbars="false"
       android:scrollbars="vertical"
       app:layoutManager="LinearLayoutManager"
       tools:layout_editor_absoluteX="36dp"
       tools:layout_editor_absoluteY="-16dp"
       app:cardBackgroundColor="#FFFFFF"
       >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

         <ImageView
             android:id="@+id/card_IMG_type"
             android:layout_width="48dp"
             android:layout_height="match_parent"
             android:src="@drawable/ic_cycling"
             />

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginStart="8dp"
             >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

               <TextView
                   android:id="@+id/card_LBL_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   />

               <TextView
                   android:id="@+id/card_LBL_start_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:layout_marginStart="4dp"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/makaf"
                   android:textSize="16sp"
                   />

               <TextView
                   android:id="@+id/card_LBL_end_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/duration"
                   android:textSize="16sp"
                   />

               <TextView
                   android:id="@+id/card_LBL_duration"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:layout_weight="8"
                   android:layout_marginStart="4dp"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/distance"
                   android:textSize="16sp"
                   />
               <TextView
                   android:id="@+id/card_LBL_distance"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:layout_marginStart="4dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/km"
                   android:layout_marginStart="4dp"
                   android:textSize="16sp"
                   />





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/pace"
                   android:textSize="16sp"
                   />
               <TextView
                   android:id="@+id/card_LBL_pace"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:layout_marginStart="4dp"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/km_h"
                   android:textSize="16sp"
                   android:layout_weight="1"
                   android:layout_marginStart="4dp"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/calories_burned"
                   android:textSize="16sp"
                   />

               <TextView
                   android:id="@+id/card_LBL_calories"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:layout_marginStart="4dp"
                   />

            </LinearLayout>
         </LinearLayout>
         <View
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_weight="1"
             />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/card_IMG_edit"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorGreen"                   app:icon="@drawable/ic_edit"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/card_IMG_delete"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorRed"
                app:icon="@drawable/ic_delete"
                />
         </LinearLayout>
      </LinearLayout>
   </androidx.cardview.widget.CardView>
</LinearLayout>