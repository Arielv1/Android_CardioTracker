<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Main_Menu"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/main_menu_LAY_distance_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Runs: "
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/main_menu_LBL_num_runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Distance: "
                android:textSize="18sp"
                />



            <TextView
                android:id="@+id/main_menu_LBL_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/main_menu_LBL_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" km"
                android:textSize="18sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_menu_LAY_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/main_menu_LAY_distance_stats"
            >

            <Spinner
                android:id="@+id/main_menu_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tooltipText="Activity Type"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_menu_LAY_pace_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/main_menu_LAY_spinner"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Pace: "
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/main_menu_LBL_avg_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" km/h"
                android:textSize="18sp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_menu_LBL_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/history_underline"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textSize="15sp"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_weight="1"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_menu_LBL_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_underline"
                android:textSize="15sp"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/primary_text_light"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_menu_LAY_activity_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/main_menu_LAY_pace_stats"
            android:layout_marginTop="20dp"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_menu_BTN_new_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_new_activity"
                android:layout_weight="1"
                app:backgroundTint="@color/resetColor"
                android:textColor="@color/colorPrimary"
                />
            <!--                style="@style/Widget.MaterialComponents.Button"-->


            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_menu_BTN_manual_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manually_add_activity"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                app:backgroundTint="@color/colorPrimaryDark"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/main_menu_LAY_pace_stats"
            >


        </LinearLayout>
        <com.jjoe64.graphview.GraphView
            android:id="@+id/main_menu_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_menu_LAY_activity_btns"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>